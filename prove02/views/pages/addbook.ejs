<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../includes/header.ejs') %>
</head>

<body id="page-top">
    <%- include ('../includes/nav.ejs') %>
        <!-- Bookshelf Section-->
        <section class="page-section bookshelf" id="bookshelf">
            <div class="container">
                <!-- bookshelf Section Heading-->
                <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Add a book</h2>
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <form action="/save-book" method="POST">
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Book</label>
                                    <input class="form-control" name="book" type="text" placeholder="Enter book name ..." required="required" />
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>

                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Summary</label>
                                    <textarea class="form-control" name="summary" rows="2" placeholder="Enter the Book Summary ..." required="required"></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <br />
                            <div id="success"></div>
                            <div class="form-group"><button class="btn btn-primary btn-xl" type="submit">Save Book</button></div>
                        </form>
                    </div>
                </div>



            </div>
        </section>

        <!-- Footer-->
        <%- include ('../includes/footer.ejs') %>

            <!-- Copyright Section-->
            <%- include ('../includes/copyright.ejs') %>

                <!-- Bootstrap core JS-->
                <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
                <!-- Third party plugin JS-->
                <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>

</body>

</html>